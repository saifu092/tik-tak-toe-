<body>

  <h1>Tic Tac Toe game creat by SAIF</h1>
  <div class="board" id="board"></div>
  <div class="winner" id="winner"></div>
  <button onclick="restartGame()">Restart Game</button>

  <script>
    const board = document.getElementById('board');
    const winnerText = document.getElementById('winner');
    let currentPlayer = 'X';
    let cells = Array(9).fill(null);

    function createBoard() {
      board.innerHTML = '';
      cells.forEach((cell, index) => {
        const cellDiv = document.createElement('div');
        cellDiv.classList.add('cell');
        cellDiv.dataset.index = index;
        cellDiv.innerText = cell || '';
        cellDiv.addEventListener('click', handleMove, { once: true });
        board.appendChild(cellDiv);
      });
    }

    function handleMove(e) {
      const index = e.target.dataset.index;
      if (!cells[index]) {
        cells[index] = currentPlayer;
        e.target.innerText = currentPlayer;
        if (checkWinner(currentPlayer)) {
          winnerText.innerText = `ðŸŽ‰ Player ${currentPlayer} wins!`;
          board.querySelectorAll('.cell').forEach(cell => cell.removeEventListener('click', handleMove));
        } else if (cells.every(cell => cell)) {
          winnerText.innerText = "It's a draw!";
        } else {
          currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
        }
      }
    }

    function checkWinner(player) {
      const winConditions = [
        [0, 1, 2],
        [3, 4, 5],
        [6, 7, 8],
        [0, 3, 6],
        [1, 4, 7],
        [2, 5, 8],
        [0, 4, 8],
        [2, 4, 6],
      ];
      return winConditions.some(condition =>
        condition.every(index => cells[index] === player)
      );
    }

    function restartGame() {
      cells = Array(9).fill(null);
      currentPlayer = 'X';
      winnerText.innerText = '';
      createBoard();
    }

    createBoard();
  </script>

</body>
</html>
